@import 'mixin.styl'

.body-team 
	.list-items
		li 
			&:nth-of-type(4)
				a 
					&:after
						item-header-active()
.team-banner
	&.g-banner
		background-image url(../img/team/team-background.jpg)	
.team-title
	text-align center
	padding 90px 0 60px 0
	.g-title
		span
			display block
	p
		font-family 'Roboto-Light'
		font-size 25px
		margin-top 10px
		margin-bottom 20px
.team
	/*max-width 1180px
	margin auto
	width 95%*/
	padding-bottom 100px
.team-item
	margin-bottom 20px
	display flex
	justify-content space-between
	align-items stretch
	.left
		width calc(100% - 412px)
		.team-img
			width 100%
			height 545px
			padding-top 71%
			figcaption
				left 60px
				bottom 50px
				font-size 45px
	.right
		width 392px
		display flex
		justify-content space-between
		flex-direction column
		.team-img
			width 100%
			height 264px
			padding-top 67%
			figcaption
				font-size 25px
				line-height 1.3
	&:nth-child(even)
		flex-direction row-reverse
	&:last-child
		margin-bottom 0
.team-img
	using-background()
	background-position center top
	position relative
	&:before
		content ""
		width 100%
		height 80%
		display block
		background linear-gradient(to bottom, 
									rgba(0,0,0,0) 0%,
									rgba(0, 0, 0, 0.3) 50%,
									rgba(0,0,0,0.8) 100%)
		position absolute
		left 0
		bottom 0
	figcaption
		position absolute
		left 20px
		bottom 20px
		z-index 2
		font-family 'Roboto-Black'
		color #fff
		line-height 100%
	span
		display block
		
@media screen and (max-width 960px)
	.team-item
		.left
			.team-img 
				figcaption
					left 30px
					font-size 30px
		.right 
			.team-img
				figcaption
					font-size 20px
@media screen and (max-width 768px)
	.team-title
		padding 30px 0 30px
		p 
			font-size 20px
	.team 
		padding-bottom 30px
	.team-item
		.left
			width calc(55% - 10px)
			.team-img
				height 450px
		.right 
			width calc(45% - 10px)
			.team-img
				height calc(50% - 10px)
				&:nth-of-type(2)
					margin-top 20px
		&:nth-child(odd)
			.right
				margin-left 20px
		&:nth-child(even)
			.right 
				margin-right 20px
@media screen and (max-width 550px)
	.team-item
		flex-flow column wrap
		.left
			width 100%
			.team-img
				height 350px
				padding-top 0
		.right 
			width 100%
			flex-direction row
			margin-top 20px
			.team-img
				width calc(50% - 10px)
				height 220px
				padding-top 0
				&:nth-of-type(2)
					margin-top 0
		&:nth-child(odd)
			.right
				margin-left 0px
		&:nth-child(even)
			.right 
				margin-right 0px
@media screen and (max-width 480px)
	.team-item
		.left, .right
			.team-img
				figcaption
					font-size 16px
					line-height 1.2
					left 14px
					bottom 14px
@media screen and (max-width 450px)
	.team-item
		.right 
			flex-direction column
			.team-img 
				width 100%
				height 230px
				&:nth-of-type(1)
					margin-bottom 20px
		.left 
			.team-img
				height 230px