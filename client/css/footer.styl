@import 'mixin.styl'

.footer-top
	background-image url(../img/footer-background.jpg)
	using-background()
	padding 145px 0 65px
	margin-top -1px
	.g-title
		color white
		margin-bottom 84px
		line-height 1
.footer-form
	using-flex(row, space-between, center)
.input-container
	width calc(50% - 23px)
	margin-bottom 66px
	position relative
	&:nth-child(even)
		margin-left 46px
.textarea-container
	width 100%
	margin-bottom 0
	textarea 
		height 145px
.form-input
	display block
	width 100%
	height 50px
	background-color transparent
	border-bottom 1px solid rgba(255, 255, 255, .4)
	font-family 'Roboto-Light'
	color #c1c1c1
	font-size 22px
	resize none
.row-input-content
	using-flex(row, flex-start, center)
	position absolute
	left 0
	top -7px
	transition all 0.5s
	label, img
		transition all 0.5s
	label 
		color white
		font-size 22px
		font-family 'Roboto-Regular'
		color #c1c1c1
		margin-left 15px
	&.active
		top -25px
		img 
			width 20px 
			height 14px
		label 
			font-size 15px
.lively-bar
	width 0
	height 1px 
	background-color white
	position absolute
	left 0
	bottom 0
	transition all 0.5s ease
	&.active
		width 100%
.button-form
	margin 76px auto 0
	cursor pointer
	@media screen and (min-width 1024px)
		transition all 0.7s
		transform translateY(100px) scaleX(0)
		opacity 0
		&.active
			transform translateY(0) scaleX(1)
			opacity 1
.footer-bottom
	.wancho 
		using-flex(row, space-between, center)
.footer-bottom-left
	using-flex(row, space-between, center)
	width calc(100% - 125px)
	padding-left 80px
.footer-item
	using-flex(row, flex-start, center)
	padding 13px 0
	h6, a
		color #343434
		font-family 'Roboto-Regular'
		font-size 14px
	img 
		margin-right 15px
	&:nth-of-type(2)
		justify-content center
.footer-copyright
	text-align center
	width 100%
	padding 15px 0
	border-top 1px solid #ededed
	h5 
		font-family 'Roboto-Regular'
		text-align center
		color #919191
		font-size 12px
.logo-footer
	margin-top -55px