@import 'mixin.styl'

.body-contact
	.list-items
		li 
			&:nth-of-type(6)
				a 
					&:after
						item-header-active()
.contact-banner
	&.g-banner
		background-image url(../img/contact/contact-banner.jpg)
	.g-banner-content
		width 100%
		max-width 670px
		margin 0 auto
.contact-title
	text-align center
	padding 103px 0 108px 
	.g-title
		span
			display block
	p
		font-family 'Roboto-Light'
		font-size 25px
		margin-top 14px
		color #343434
		&:last-child
			font-family 'Roboto-Black'
			margin-top 12px	
	a
		font-family 'Roboto-Black'
		font-size 22px
		color #343434
		padding 0 10px
.contact-ubication
	width 100%
	height 646px
#ubication-google-maps
	width 100%
	height 100%
.contact-row-icon
	margin-top 22px
	a 
		font-size 32px 
		padding 12px 
		border-radius 50%
		color #999999
		border 2px solid #999999
		&:nth-of-type(2)
			margin 0 25px
		@media screen and (min-width 1025px)
			transition all 0.5s
			&:hover
				color white
				background-color #999999