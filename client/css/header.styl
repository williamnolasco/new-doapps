@import 'mixin.styl'

header
	width 100%
	//padding 35px 80px 35px 112px
	padding 35px 0
	position absolute
	left 0
	top 0
	z-index 100
	.wancho 
		using-flex(row, space-between, center)
.link-logo-mobile
	display none
.link-logo
	width 18%
	i 
		font-size 60px
	/*img 
		img-responsive()*/
.list-items
	using-flex(row, space-around, center)
	list-style none
	width 80%
	max-width 720px
	height 52px
	position relative
	li 
		height 100%
.item-link
	using-flex(row, center, center)
	text-decoration none
	/*width 120px*/
	width auto
	height 100%
	text-align center
	font-family font-8
	font-size 17px
	color white
	position relative
.movable-bar
	width 100px
	height 0
	border-bottom 1px solid white
	position absolute
	left 15px
	bottom 0
	transition all 0.5s ease
.open-menu-mobile
	display none
@media screen and (max-width 980px)
	body
		.list-items
			li 
				width 100%
				&:nth-of-type(1)
					margin-top 30px
					a 
						&:after
							border-bottom 0
	.link-logo, .link-logo-mobile
		width 40%
		max-width 200px
		position relative
		z-index 1
		&.active
			//position fixed
			//left 35px
			//top 35px
			animation-name desaparece
			animation-duration 2s
			animation-iteration-count 1
			position fixed 
			left 3%
			top 35px
	.link-logo-mobile
		img 
			display block
	.list-items
		flex-flow column wrap
		justify-content center
		opacity 0
		width 100%
		max-width 100%
		height 100%
		overflow auto
		background-color black
		transition all 0.5s ease-out
		position fixed
		left 0
		top 0
		z-index 0
		pointer-events none
		li 
			width 86%
			max-width 400px
			height 45px
			border-bottom 1px solid rgba(white, 0.4)
		&.active
			opacity 1
			pointer-events auto
	.open-menu-mobile
		display block
		font-size 30px
		color white
		position relative
		z-index 1
		&.active
			animation-name desaparece
			animation-duration 2s
			animation-iteration-count 1
			position fixed
			right 3%
			top 46px
			&:before
				content '\e117'
	.item-link
		width 100%
		font-size 20px 
	.list-items 
		li 
			height 55px
			border-bottom 0
	.movable-bar
		display none
	@keyframes desaparece
		0%
			opacity 0
			transform scale 0
		100% 
			opacity 1
			transform scale 1
@media screen and (max-width 480px)
	header
		padding 30px 0
	.link-logo
		display none
	.link-logo-mobile
		display block
		&.active
			left 20.8px
			top 30px
	.open-menu-mobile
		&.active
			right 20.8px 
			top 36px
