@import 'mixin.styl'

header
	using-flex(row, space-between, center)
	width 100%
	padding 35px 80px 35px 112px
	position absolute
	left 0
	top 0
	z-index 2
.list-items
	using-flex(row, space-around, center)
	list-style none
	width 80%
	max-width 780px
	height 52px
	position relative
	li 
		height 100%
.item-link
	using-flex(row, center, center)
	text-decoration none
	width 120px
	height 100%
	text-align center
	font-family 'Roboto-Medium'
	font-size 17px
	color white
	position relative
.movable-bar
	width 100px
	height 0
	border-bottom 1px solid white
	position absolute
	left 15px
	bottom 0
	transition all 0.5s ease
				