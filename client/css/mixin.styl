.g-title
	text-align center
	color #070707
	line-height 1.2
	h5
		font-size 48px
		//font-size 50px
		font-family font-1
		letter-spacing -2px
		span
			font-family font-3
			margin-left 7px
.title-special
	width auto
	padding-left 27px
	position relative
	&:before
		content ''
		width 5px 
		height 90%
		background-color green-doapps
		position absolute
		left 0
		top 50%
		transform translateY(-50%)
