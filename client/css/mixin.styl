font-4 = 'font-Italic'
font-6 = 'font-Black'
font-7 = 'font-BlackItalic'
font-8 = 'font-Medium'
font-9 = 'font-BoldItalic'

body
	overflow-x hidden

h1, h2, h3, h4, h5, h6, strong, p 
	font-weight normal
	line-height 1
a 
	text-decoration none
	display inline-block
ul 
	list-style none
input, select, textarea, button
	appearance none
	outline 0
	border 0
	box-shadow none
