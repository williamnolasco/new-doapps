@import 'mixin.styl'

.team-title
	text-align center
	padding 90px 0 60px 0
	.g-title
		span
			display block
	p
		font-family 'Roboto-Light'
		font-size 25px
		margin-top 10px
		margin-bottom 20px
.team
	max-width 1180px
	margin auto
	width 95%
	padding-bottom 100px
.team-item
	margin-bottom 20px
	display flex
	justify-content space-between
	align-items stretch
	.left
		width calc(100% - 412px)
		.team-img
			padding-top 71%
			figcaption
				left 60px
				bottom 50px
				font-size 45px
	.right
		width 392px
		display flex
		justify-content space-between
		flex-direction column
		.team-img
			padding-top 67%
			figcaption
				font-size 25px
				line-height 1.3
	&:nth-child(even)
		flex-direction row-reverse
	&:last-child
		margin-bottom 0
.team-img
	using-background()
	background-position center top
	position relative
	&:before
		content ""
		width 100%
		height 80%
		display block
		background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0.5) 100%)
		position absolute
		left 0
		bottom 0
	figcaption
		position absolute
		left 20px
		bottom 20px
		z-index 2
		font-family 'Roboto-Black'
		color #fff
		line-height 100%
	span
		display block