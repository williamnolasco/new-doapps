@import 'mixin.styl'
.detail-products
	.footer-top
		display none
.detail-client
	&.products-detail
		padding-bottom 100px
		.g-title
			margin-bottom 40px
.detail-characteristics-cnt
	max-width 900px
	margin auto
	padding-bottom 100px
	.g-title
		margin-bottom 60px
	ul
		column-count 2
	li
		position relative
		padding-left 45px
		font-size 22px
		font-family font-1
		margin-bottom 40px
		i
			position absolute
			left 0 
			top 0
			width 28px
			height 28px
			background-image url('../img/products/icon.png')
			using-background()
	strong
		font-family font-3
		
.detail-products-preview
	background-color #fcfcfc
	padding 130px 0
.detail-products-wrap
	padding-top 80px
	text-align center
	display flex
	flex-direction row
	align-content flex-start
	justify-content: space-between
.detail-products-item
	display flex
	justify-content: center
	img
		img-responsive()
.detail-products-customers
	padding 130px 0 100px 0
.detail-customers-item
	margin-bottom 40px
	img
		img-responsive()
		
.detail-products-question
	height 465px
	background-color #343434
	display flex
	flex-direction column
	align-items center
	justify-content center
	.g-title
		color #fff
	p
		max-width 520px
		margin 20px auto 25px auto
		font-family font-1
		font-size 25px
@media screen and (max-width 1200px)
	.detail-products-item
		width: 33%
		margin-right: 2%
		&:last-child
			margin-right: 0px
@media screen and (max-width 768px)
	.detail-client.products-detail
		padding-top: 45px
		padding-bottom: 90px
	.detail-client.products-detail .g-title
		margin-bottom: 25px
	.detail-characteristics-cnt
		padding-bottom: 0px
	.detail-products-preview
		padding: 90px 0px
	.detail-products-customers
		padding: 70px 0px
	.detail-products-item
		margin-right: 5%
	.detail-characteristics-cnt li
		font-size: 16px
@media screen and (max-width 560px)
	.detail-characteristics-cnt .g-title
		margin-bottom: 30px
	.detail-products-wrap
		flex-wrap: wrap
	.detail-customers-item
		width: 50%
	.detail-products-question
		height: auto
		padding-top: 60px
		padding-bottom: 100px
@media screen and (max-width 480px)
	.detail-characteristics-cnt ul
		column-count 1
	.detail-characteristics-cnt li
		margin-bottom: 25px
	.detail-products-preview
		padding: 80px 0px
	.detail-products-wrap
		padding-top: 30px
	.detail-products-customers
		padding-top: 0px
		padding-bottom: 60px
	.detail-client.products-detail
		padding-bottom: 80px
	.detail-products-question p
		font-size: 16px
		line-height: 20px
	.detail-products-question .g-title
		max-width: 80%
		span
			display: block
