@import 'mixin.styl'
.detail-products
	.footer-top
		display none
.detail-client
	&.products-detail
		padding-bottom 100px
		.g-title
			margin-bottom 40px
.detail-characteristics-cnt
	max-width 900px
	margin auto
	padding-bottom 100px
	.g-title
		margin-bottom 60px
	ul
		column-count 2
	li
		position relative
		padding-left 45px
		font-size 22px
		font-family 'Roboto-Light'
		margin-bottom 40px
		i
			position absolute
			left 0 
			top 0
			width 28px
			height 28px
			background-image url('../img/products/icon.png')
			using-background()
	strong
		font-family 'Roboto-Bold'
		
.detail-products-preview
	background-color #fcfcfc
	padding 130px 0
.detail-products-wrap
	padding-top 80px
	text-align center
	display flex
	flex-direction row
	flex-wrap wrap
	align-content flex-start
.detail-products-item
	display flex
	&:nth-child(2)
		margin 0 55px
.detail-products-customers
	padding 130px 0 100px 0
.detail-customers-item
	margin-bottom 40px
	img
		img-responsive()
		
.detail-products-question
	height 465px
	background-color #343434
	display flex
	flex-direction column
	align-items center
	justify-content center
	.g-title
		color #fff
	p
		max-width 520px
		margin 20px auto 25px auto
		font-family 'Roboto-Light'
		font-size 25px