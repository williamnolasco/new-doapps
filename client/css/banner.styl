@import 'mixin.styl'

.g-banner
	using-flex(column, center, center)
	height 635px
	background-image url(../img/products/products-banner.jpg)
	using-background()
	position relative
	z-index -1
	&:before
		content ''
		width 100%
		height 100%
		background linear-gradient(to bottom, rgba(0, 0, 0, 0.95) 0%,
											rgba(0, 0, 0, 0.9) 25%,
											rgba(0, 0, 0, 0.85) 50%,
											rgba(0, 0, 0, 0.7) 70%,
											rgba(0, 0, 0, 0.4) 100%)
		position absolute
		left 0
		top 0
.g-banner-content
	text-align center
	color white
	position relative
	z-index 2
	h5
		font-family font-3
		font-size 66px
		margin-bottom 13px
	h6 
		font-family font-1
		font-size 25px
		line-height 1.25
		strong 
			margin 0 7px
			font-family font-7
			letter-spacing 0.7px
@media screen and (max-width 960px)
	.g-banner
		height 580px
	.g-banner-content
		h5 
			font-size 50px
@media screen and (max-width 768px)
	.g-banner 
		height 500px
	.g-banner-content
		h5 
			font-size 45px
		h6 
			font-size 20px
@media screen and (max-width 480px)
	.g-banner 
		height 400px
	.g-banner-content
		h5 
			font-size 28px
			margin-bottom 10px
		h6 
			font-size 16px
			line-height 1.6
			strong 
				font-family font-3
