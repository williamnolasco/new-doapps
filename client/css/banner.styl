@import 'mixin.styl'

.g-banner
	using-flex(column, center, center)
	height 635px
	background-image url(../img/products/products-banner.jpg)
	using-background()
	position relative
	&:before
		content ''
		width 100%
		height 100%
		background linear-gradient(to bottom, rgba(0, 0, 0, 0.9) 0%,
											rgba(0, 0, 0, 0.9) 50%,
											rgba(0, 0, 0, 0.6) 100%)
		position absolute
		left 0
		top 0
.g-banner-content
	text-align center
	color white
	position relative
	z-index 2
	h5
		font-family 'Roboto-Bold'
		font-size 66px
		margin-bottom 10px
	h6 
		font-family 'Roboto-Light'
		font-size 25px