@import 'mixin.styl'

.list-items
	li 
		&:nth-of-type(2)
			a 
				&:after
					content ''
					width 100px
					height 0px
					border-bottom 1px solid white
					position absolute
					left 50%
					bottom 0
					-webkit-transform translateX(-50%)
					transform translateX(-50%)
.project-title
	background-image url(../img/detail-project/project-title-background.jpg)
	using-background()
	position relative
	padding-top 156px
	&:after
		content ''
		width 100%
		height 100%
		background linear-gradient(to bottom, rgba(0, 0, 0, 0.95) 0%,
												rgba(0, 0, 0, 0.9) 50%,
												rgba(0, 0, 0, 0.8) 100%)
		position absolute
		left 0
		top 0
	.wancho 
		using-flex(row, space-between, flex-end)
		position relative
		z-index 2
.project-title-left
	width calc(100% - 330px)
	color white
	padding 0 30px 87px 0 
	h5
		font-family 'Roboto-Bold'
		font-size 67px
		line-height 1.15
	h6 
		width 45%
		font-family 'Roboto-Light'
		font-size 26px
		line-height 1.2
.detail-client, .detail-proposal
	padding 140px 0 160px
.row-detail-client-title
	using-flex(row, center, center)
	margin-bottom 35px
	h6
		width 80px 
		height 80px
		text-align center 
		line-height 80px
		font-family 'Roboto-Black'
		font-size 25px
		color #4b4b4b
		border-radius 50%
		border 2px solid #4b4b4b
		margin-right 26px
.detail-client-p
	width 86.5%
	margin 0 auto
	p 
		font-family 'Roboto-Light'
		font-size 22px
		color #353535
		text-align center
		line-height 1.6
		strong 
			font-family 'Roboto-Regular'
			margin 0 7px
.detail-proposal
	background-color green-doapps
	.row-detail-client-title
		h6 
			color white 
			border 2px solid white
		.g-title 
			color white
	.detail-client-p
		p 
			color rgba(white, 0.8)
			strong
				color white
.detail-design
	background-color #1a1a1a
	padding 174px 0 278px
	position relative
	&:before
		content ''
		width 100%
		height 40%
		border-radius 150% 150% 0 0
		border-top 1px solid #2e2e2e
		border-left 1px solid #2e2e2e
		border-right 1px solid #2e2e2e
		border-bottom 1px solid transparent
		position absolute
		left 0 
		bottom 0
		z-index 1
		transform rotateX(180deg) translateY(13%)
	.row-detail-client-title
		h6 
			color white
			border 2px solid white
	.g-title
		h5 
			color white
			span 
				color white
	.logo-project
		text-align center
		margin 65px 0 47px
	.detail-row-screen
		width 92%
		max-width 1242px
		using-flex(row, space-between, center)
		margin 0 auto
		position relative
		z-index 2
		&:before 
			content ''
			z-index 1
			width 95%
			height 100%
			border-radius 800px 800px 0 0
			border-top 1px solid #2e2e2e
			border-left 1px solid #2e2e2e
			border-right 1px solid #2e2e2e
			border-bottom 1px solid transparent
			position absolute
			left 50%
			top 0
			-webkit-transform translate(-50%, -375px)
			transform translate(-50%, -375px)
	.screen
		position relative
		z-index 2
		img 
			img-responsive()
		&:nth-of-type(1), &:nth-of-type(3)
			width calc(30% - 14px)
		&:nth-of-type(2)
			width 40%
.detail-wireframe
	padding 172px 0 92px
.detail-wireframe-title
	width auto
	padding-left 27px
	position relative
	&:before
		content ''
		width 5px 
		height 90%
		background-color green-doapps
		position absolute
		left 0
		top 50%
		transform translateY(-50%)
	.g-title
		text-align left
		line-height 1
	h6 
		color #656565
		font-family 'Roboto-Light'
		font-size 22px
		margin-top 1px
.detail-wireframe-row-screen
	using-flex(row, space-around, center)
	figure
		width calc(25% - 48px)
		margin 50px 24px 0
		img 
			width 100%
			img-responsive()
			margin 0 auto
.detail-wireframe-subtitle
	margin 18px 0 40px
	p 
		font-family 'Roboto-Light'
		font-size 20px
		color #1a1a1a
		line-height 1.6
.f-s-colors-container
	//outline 1px solid red 
	using-flex(row, space-between, center)
	width 80%
.f-s-colors-left
	using-flex(row, space-around, center)
.f-s-color
	width 120px 
	height 97px
	position relative
	box-shadow 2px -2px 15px rgba(0, 0, 0, 0.15)
	border-radius 10px
	&:after
		content '#ff7400'
		width 100%
		height 27px
		line-height 27px
		text-align center
		background-color white
		position absolute
		left 0
		bottom 0
		color #1c1c1c
		font-family 'Roboto-Light'
		font-size 13px
		border-radius 0 0 10px 10px
	&.color1 
		background-color #ff7400
	&.color2
		background-color #fe9d4c
	&.color3
		background-color #ffb475
	&.color4
		background-color #4c4c4c
	&.color5 
		background-color #b6b6b6
	&.color6 
		background-color #cdcdcd
.final-screen
	padding 50px 0 50px
.f-s-typography
	width 220px
	height 178px
	position relative
	background-color white
	box-shadow 2px -2px 15px rgba(0, 0, 0, 0.15)
	text-align center
	&:before, &:after
		width 100%
		color #1c1c1c
		text-align center
		position absolute
		left 0
	&:before
		content 'Aa'
		font-family 'Roboto-Black'
		font-size 56px
		height 130px 
		line-height 130px
		top 0
		border-radius 10px 10px 0 0
	&:after 
		font-size 18px
		font-family 'Roboto-Light'
		content 'Avenir'
		height 48px
		line-height 48px
		bottom 0
		border-radius 0 0 10px 10px
		border-top 1px solid #efefef
		
	
			
			

				