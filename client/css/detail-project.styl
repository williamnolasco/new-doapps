@import 'mixin.styl'

.list-items
	li 
		&:nth-of-type(2)
			a 
				&:after
					content ''
					width 100px
					height 0px
					border-bottom 1px solid white
					position absolute
					left 50%
					bottom 0
					-webkit-transform translateX(-50%)
					transform translateX(-50%)
.project-title
	background-image url(../img/detail-project/project-title-background.jpg)
	using-background()
	position relative
	padding-top 156px
	&:after
		content ''
		width 100%
		height 100%
		background linear-gradient(to bottom, rgba(0, 0, 0, 0.95) 0%,
												rgba(0, 0, 0, 0.9) 50%,
												rgba(0, 0, 0, 0.8) 100%)
		position absolute
		left 0
		top 0
	.wancho 
		using-flex(row, space-between, flex-end)
		position relative
		z-index 2
.project-title-left
	width calc(100% - 330px)
	color white
	padding 0 30px 87px 0 
	h5
		font-family 'Roboto-Bold'
		font-size 67px
		line-height 1.15
	h6 
		width 45%
		font-family 'Roboto-Light'
		font-size 26px
		line-height 1.2
.detail-client, .detail-proposal
	padding 140px 0 160px
.row-detail-client-title
	using-flex(row, center, center)
	margin-bottom 35px
	h6
		width 80px 
		height 80px
		text-align center 
		line-height 80px
		font-family 'Roboto-Black'
		font-size 25px
		color #4b4b4b
		border-radius 50%
		border 2px solid #4b4b4b
		margin-right 26px
.detail-client-p
	width 86.5%
	margin 0 auto
	p 
		font-family 'Roboto-Light'
		font-size 22px
		color #353535
		text-align center
		line-height 1.6
		strong 
			font-family 'Roboto-Regular'
			margin 0 7px
.detail-proposal
	background-color green-doapps
	.row-detail-client-title
		h6 
			color white 
			border 2px solid white
		.g-title 
			color white
	.detail-client-p
		p 
			color rgba(white, 0.8)
			strong
				color white