@import 'mixin.styl'

.service
	&.g-banner
		background-image url(../img/service/service-background.jpg)	
	.g-banner-content
		width 90%
		max-width 620px
		margin 0 auto
		top 15px
		h5 
			margin-bottom 5px
		h6 
			width 78%
			margin 0 auto
			line-height 1.2
.client
	padding 114px 0 60px
	.wancho 
		text-align center
	.g-btn
		margin-top 61px
		@media screen and (min-width 1024px)
			transition all 0.7s
			transform translateY(100px) scaleX(0)
			opacity 0
			&.active
				transform translateY(0) scaleX(1)
				opacity 1
.client-description
	width 100%
	max-width 520px
	margin 9px auto 0
	p 
		font-family 'Roboto-Light'
		font-size 17px
		text-align center
		line-height 1.5
		color #a0a0a0
.row-clients
	using-flex(row, space-around, center)
	margin-top 50px
.owl-dots
	using-flex(row, center, center)
	margin-top 35px
.owl-dot
	width 12px
	height 12px
	background-color #727272
	border-radius 50%
	transition all 0.5s
	cursor pointer
	&.active, &:hover
		width 15px
		height 15px
		background-color white
		border 2px solid #727272
	&:nth-of-type(2)
		margin 0 25px
.service-client
	padding 123px 0 127px
	.client-description
		margin-top 14px
.service-list 
	background-color #fcfcfc
	padding 120px 0 100px
	.g-title
		h5 
			margin-bottom 11px
		h6 
			font-family 'Roboto-Light'
			font-size 25px
			width 100%
			max-width 400px
			margin 0 auto
			line-height 1.2
.service-row-service
	using-flex(row, space-between, center)
	margin-top 78px
.service-item
	using-flex(row, center, center)
	width calc(33.33% - 12px)
	max-width 380px
	height 242px
	border 1px solid #d4d4d4
	margin-bottom 42px
	&:nth-of-type(1)
		.service-image	
			background-image url(../img/service/service1.jpg)
	&:nth-of-type(2)
		.service-image	
			background-image url(../img/service/service2.jpg)
	&:nth-of-type(3)
		.service-image	
			background-image url(../img/service/service3.jpg)
	&:nth-of-type(4)
		.service-image	
			background-image url(../img/service/service4.jpg)
	&:nth-of-type(5)
		.service-image	
			background-image url(../img/service/service5.jpg)
	&:nth-of-type(6)
		.service-image	
			background-image url(../img/service/service6.jpg)
.service-image, .service-content-item
	width 50%
	height 100%
.service-image
	using-background()
.service-content-item
	using-flex(column, center, center)
	text-align center
	background-color white
	padding 15px 20px
	figure
		img 
			img-responsive()
	h2
		font-family 'Roboto-Black'
		font-size 30px
		margin-top 12px
	h5 
		font-family 'Roboto-Light'
		font-size 16px
		margin-top 6px
		line-height 1.15
.service-process
	background-color #f3fafd
	padding 130px 0 122px
	.title-special
		margin-bottom 86px
		padding-left 46px
		.g-title
			h5 
				font-size 57px
				span 
					margin 0 13px
		h6 
			margin-top 7px
		&:before 
			height 115%
			background-color #000
.service-process-bg
	img-responsive()
	margin 0 auto
			