doctype html
html(lang='es')
	head
		meta(charset='utf-8')
		title Doapps SAC - Desarrollo de Aplicaciones Móviles en Perú
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
		meta(name='description' content='Doapps SAC es una empresa de desarrollo de aplicaciones móviles en Perú. Creamos aplicaciones móviles nativas para IOS y Android')
		meta(name='keywords' content='')

		link(rel='stylesheet', href='./client/js/validationform/validationEngine.jquery.css')
		link(rel='stylesheet', type='text/css', href='./client/css/icons.css')
		link(rel='stylesheet', type='text/css', href='./client/js/owl-carousel/owl.carousel.css')
		link(rel='stylesheet', type='text/css', href='./client/css/main.css')
